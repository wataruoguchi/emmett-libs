{
  "name": "poc-emmett",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prepare": "husky",
    "pretest": "TPWD=$(pwd) && cd ../packages/emmett-crypto-shredding && npm run build && cd $TPWD && cd ../packages/emmett-crypto-shredding-kysely && npm run build && cd $TPWD && cd ../packages/emmett-event-store-kysely && npm run build",
    "test": "npm run type-check && vitest run",
    "t:c": "vitest src/modules/cart/tests/*.spec.ts",
    "t:g": "vitest src/modules/generator/tests/*.spec.ts",
    "test:coverage": "vitest run --coverage",
    "format": "biome format --write",
    "codegen": "kysely-codegen",
    "migrate:up": "kysely migrate:up && npm run codegen",
    "migrate:down": "kysely migrate:down && npm run codegen",
    "type-check": "tsc --noEmit",
    "tc": "npm run type-check",
    "proj:worker": "tsx src/workers/projection-worker.ts"
  },
  "dependencies": {
    "@event-driven-io/emmett": "^0.38.6",
    "@hono/node-server": "^1.19.4",
    "@wataruoguchi/emmett-event-store-kysely": "file:../packages/emmett-event-store-kysely",
    "@wataruoguchi/emmett-crypto-shredding": "file:../packages/emmett-crypto-shredding",
    "@wataruoguchi/emmett-crypto-shredding-kysely": "file:../packages/emmett-crypto-shredding-kysely",
    "hono": "^4.9.8",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "lint-staged": "^16.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format"
    ]
  }
}
